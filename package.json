{
  "name": "smartfilterpro-core-ingest",
  "version": "0.1.1",
  "description": "SmartFilterPro Core Ingest Service â€” receives normalized runtime events, stitches sessions, and posts summaries to Bubble.io",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && npm run copy-migrations",
    "copy-migrations": "mkdir -p dist/db/migrations && cp -r src/db/migrations/*.sql dist/db/migrations/ 2>/dev/null || true",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "migrate": "ts-node src/runMigrations.ts",
    "worker:session": "ts-node src/workers/sessionStitcher.ts",
    "worker:summary": "ts-node src/workers/summaryWorker.ts",
    "worker:summary:all": "ts-node src/workers/summaryWorker.ts --all",
    "worker:region": "ts-node src/workers/regionAggregationWorker.ts",
    "worker:ai": "ts-node src/workers/aiWorker.ts",
    "worker:validate": "ts-node src/workers/runRuntimeValidator.ts",
    "worker:validate:week": "ts-node src/workers/runRuntimeValidator.ts 7",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.3",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jose": "^5.2.0",
    "node-cron": "^4.2.1",
    "pg": "^8.11.5",
    "pino": "^9.3.2",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^24.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^11.0.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
